extends layout

block content
	.container-fluid
		.jumbotron
			form(action='/', method='get', align='center')
				button.titlebutton
					h1#title Bet Log
			form(action='/group/#{groupName}', method='get', align='center')
				button.titlebutton
					h2#subtitle=groupName
			h3#subtitle=optionName
			br
			br
			.row
				.col-xs-3
				.col-xs-6.boxme(align='center')
					form(action="/createbet", method="post", data-toggle="validator", role="form")
						input(type="hidden", name='groupName', value=groupName)
						input(type="hidden", name='eventId', value=eventId)
						input(type="hidden", name='optionId', value=optionId)
						input(type="hidden", name='optionName', value=optionName)
						br
						p Name
						input.form-control(type="text", name="betterName", placeholder="Name")
						br
						br
						p Wager
						input.form-control(type="tel", name="betterAmount", placeholder="Wager")
						br
						br
						p Phone Number
						input.form-control(type="tel", name="betterAddress", placeholder="XXXXXXXXXX", maxlength=10)
						br
						br
						p Carrier
						select.form-control(id="carrierselect", name="carrier")
							option 
								a(href="#") AT&T
							option 
								a(href="#") Sprint
							option 
								a(href="#") T-Mobile
							option
								a(href="#") Verizon
							option
								a(href="#") Virgin Mobile
							option 
								a(href="#") Not listed
						br
						br
						button.btn.btn-primary.btn-lg.btn-block(type="submit") Create Bet
			br
			include questionfoot
			br