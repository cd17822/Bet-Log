extends layout

block content
	.container-fluid
		.jumbotron
			form(action='/', method='get', align='center')
				button.titlebutton
					h1#title Bet Log
			h3#subtitle Place your bets!
			br
			br
			.row
				.col-xs-1
				.col-xs-10
					.button.btn-block.boxed.bet.losingbet
						.groupnametaken The Group Name you entered is already in use
						.groupnametaken Please try again to create a unique Group Name
			br
			.row
				.col-xs-2.col-sm-4
				.col-xs-8.col-sm-4.boxme(align='center')
					h3 Group Name
					form(action='/creategroup', method='post')
						input.form-control(type="text", name="groupName", placeholder="Group Name")
						br
						br
						button.btn.btn-primary.btn-lg.btn-block(type="submit") Create Group
			br
			include questionfoot